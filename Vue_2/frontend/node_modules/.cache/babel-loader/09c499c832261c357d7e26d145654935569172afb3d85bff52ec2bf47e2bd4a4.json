{"ast":null,"code":"import axios from '../axios';\nexport default {\n  data() {\n    return {\n      username: '',\n      password: '',\n      loading: false\n    };\n  },\n  methods: {\n    async handleLogin() {\n      this.loading = true;\n      try {\n        const res = await axios.post('/auth/login', {\n          username: this.username,\n          password: this.password\n        });\n        if (res.ok) {\n          // 保存token\n          localStorage.setItem('access_token', res.data.access_token);\n\n          // 显示成功消息\n          this.$message.success('登录成功！');\n\n          // 跳转到首页或之前的页面\n          this.$router.push(this.$route.query.redirect || '/');\n\n          // 通知App组件更新登录状态\n          this.$parent.checkLoginStatus();\n        }\n      } catch (error) {\n        console.error('登录失败', error);\n        // 显示错误消息\n        this.$message.error(error.error?.message || '登录失败，请检查用户名和密码');\n      } finally {\n        this.loading = false;\n      }\n    }\n  }\n};","map":{"version":3,"names":["axios","data","username","password","loading","methods","handleLogin","res","post","ok","localStorage","setItem","access_token","$message","success","$router","push","$route","query","redirect","$parent","checkLoginStatus","error","console","message"],"sources":["D:\\21626\\MyFiles\\files\\2025fall\\SE\\Vue_2\\frontend\\src\\views\\Login.vue"],"sourcesContent":["<template>\n  <div class=\"container\">\n    <div class=\"row justify-content-center\">\n      <div class=\"col-md-6 col-lg-4\">\n        <div class=\"card mt-5\">\n          <div class=\"card-header bg-primary text-white\">\n            <h4 class=\"mb-0\">用户登录</h4>\n          </div>\n          <div class=\"card-body\">\n            <form @submit.prevent=\"handleLogin\">\n              <div class=\"form-group\">\n                <label for=\"username\">用户名</label>\n                <input \n                  type=\"text\" \n                  id=\"username\" \n                  v-model=\"username\" \n                  class=\"form-control\" \n                  required\n                >\n              </div>\n              <div class=\"form-group\">\n                <label for=\"password\">密码</label>\n                <input \n                  type=\"password\" \n                  id=\"password\" \n                  v-model=\"password\" \n                  class=\"form-control\" \n                  required\n                >\n              </div>\n              <div class=\"form-group form-check\">\n                <input type=\"checkbox\" class=\"form-check-input\" id=\"remember\">\n                <label class=\"form-check-label\" for=\"remember\">记住我</label>\n              </div>\n              <button type=\"submit\" class=\"btn btn-primary btn-block\" :disabled=\"loading\">\n                <span v-if=\"loading\" class=\"spinner-border spinner-border-sm mr-2\"></span>\n                登录\n              </button>\n            </form>\n            \n            <div class=\"mt-3 text-center\">\n              <p>还没有账号？<router-link to=\"/register\">立即注册</router-link></p>\n            </div>\n          </div>\n        </div>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nimport axios from '../axios';\n\nexport default {\n  data() {\n    return {\n      username: '',\n      password: '',\n      loading: false\n    };\n  },\n  methods: {\n    async handleLogin() {\n      this.loading = true;\n      try {\n        const res = await axios.post('/auth/login', {\n          username: this.username,\n          password: this.password\n        });\n        \n        if (res.ok) {\n          // 保存token\n          localStorage.setItem('access_token', res.data.access_token);\n          \n          // 显示成功消息\n          this.$message.success('登录成功！');\n          \n          // 跳转到首页或之前的页面\n          this.$router.push(this.$route.query.redirect || '/');\n          \n          // 通知App组件更新登录状态\n          this.$parent.checkLoginStatus();\n        }\n      } catch (error) {\n        console.error('登录失败', error);\n        // 显示错误消息\n        this.$message.error(error.error?.message || '登录失败，请检查用户名和密码');\n      } finally {\n        this.loading = false;\n      }\n    }\n  }\n};\n</script>\n\n<style scoped>\n.card {\n  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);\n}\n.card-header {\n  text-align: center;\n}\n</style>\n"],"mappings":"AAmDA,OAAOA,KAAI,MAAO,UAAU;AAE5B,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,QAAQ,EAAE,EAAE;MACZC,QAAQ,EAAE,EAAE;MACZC,OAAO,EAAE;IACX,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACP,MAAMC,WAAWA,CAAA,EAAG;MAClB,IAAI,CAACF,OAAM,GAAI,IAAI;MACnB,IAAI;QACF,MAAMG,GAAE,GAAI,MAAMP,KAAK,CAACQ,IAAI,CAAC,aAAa,EAAE;UAC1CN,QAAQ,EAAE,IAAI,CAACA,QAAQ;UACvBC,QAAQ,EAAE,IAAI,CAACA;QACjB,CAAC,CAAC;QAEF,IAAII,GAAG,CAACE,EAAE,EAAE;UACV;UACAC,YAAY,CAACC,OAAO,CAAC,cAAc,EAAEJ,GAAG,CAACN,IAAI,CAACW,YAAY,CAAC;;UAE3D;UACA,IAAI,CAACC,QAAQ,CAACC,OAAO,CAAC,OAAO,CAAC;;UAE9B;UACA,IAAI,CAACC,OAAO,CAACC,IAAI,CAAC,IAAI,CAACC,MAAM,CAACC,KAAK,CAACC,QAAO,IAAK,GAAG,CAAC;;UAEpD;UACA,IAAI,CAACC,OAAO,CAACC,gBAAgB,CAAC,CAAC;QACjC;MACF,EAAE,OAAOC,KAAK,EAAE;QACdC,OAAO,CAACD,KAAK,CAAC,MAAM,EAAEA,KAAK,CAAC;QAC5B;QACA,IAAI,CAACT,QAAQ,CAACS,KAAK,CAACA,KAAK,CAACA,KAAK,EAAEE,OAAM,IAAK,gBAAgB,CAAC;MAC/D,UAAU;QACR,IAAI,CAACpB,OAAM,GAAI,KAAK;MACtB;IACF;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}